            android:text="химия" />
        <Button
            android:id="@+id/geography_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="география" />
        <Button
            android:id="@+id/biology_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="биология" />
        <Button
            android:id="@+id/history_btn"
            android:layout_width="match_parent"
